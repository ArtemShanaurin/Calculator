<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/New"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <EditText
        android:id="@+id/number1EditText"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="50dp" />

    <EditText
        android:id="@+id/number2EditText"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="50dp" />


    <TextView
        android:id="@+id/sumResultText"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingLeft="50dp" />

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableLayout1">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <Button
                android:id="@+id/calcSummaButton"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:text="+" />

            <Button
                android:text="-"
                android:id="@+id/calcMinusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

            <Button
                android:id="@+id/calcSqrtButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sqrt"></Button>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/calcSeparateButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"></Button>
            <Button
                android:text="*"
                android:id="@+id/calcMnogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:text="x.pow"
                android:id="@+id/calcXpowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <Button
                android:id="@+id/calcSinusButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sin"></Button>
            <Button
                android:text="Cos"
                android:id="@+id/calcCosinusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <Button
                android:text="tan"
                android:id="@+id/calcTangensButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:text="Cotan"
                android:id="@+id/calcCotanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
        </TableRow>

    </TableLayout>
</LinearLayout>